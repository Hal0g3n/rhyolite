{
    "manifest_version": 3,
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "version": "1.0.0",
    "default_locale": "en",
    "permissions": ["tabs", "storage", "tabGroups"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at" : "document_idle",
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_icon": {
            "16": "images/rhyolite16.png",
            "32": "images/rhyolite32.png",
            "48": "images/rhyolite48.png",
            "128": "images/rhyolite128.png"
        },
        "default_title" : "Rhyolite Placeholder",
        "default_popup" : "popup.html"
    },
    "icons": {
      "16": "images/rhyolite16.png",
      "32": "images/rhyolite32.png",
      "48": "images/rhyolite48.png",
      "128": "images/rhyolite128.png"
    }
}
